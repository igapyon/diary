<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>igapyon.diary.ghpages</groupId>
	<artifactId>IgapyonDiaryGhPages</artifactId>
	<version>1.0.1</version>
	<packaging>jar</packaging>

	<name>IgapyonDiaryGhPages</name>
	<description>Igapyon's diary.</description>
	<url>https://igapyon.github.io/igapyonv3/</url>

	<repositories>
		<!-- igapyon repository -->
		<repository>
			<id>igapyon</id>
			<name>igapyon maven repos</name>
			<url>https://igapyon.github.io/igapyon-maven2</url>
		</repository>
	</repositories>

	<dependencies>
		<!-- igapyonv3 diary generator -->
		<dependency>
			<groupId>jp.igapyon.diary.v3</groupId>
			<artifactId>IgapyonV3</artifactId>
			<version>[1.2,2.0)</version>
		</dependency>

		<!-- Apache FileUtils -->
		<!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>[2.5,3.0)</version>
		</dependency>

		<!-- Apache StringUtil -->
		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-lang3 -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>[3.5,4.0)</version>
		</dependency>

		<!-- normalize html tag -->
		<!-- https://mvnrepository.com/artifact/org.ccil.cowan.tagsoup/tagsoup -->
		<dependency>
			<groupId>org.ccil.cowan.tagsoup</groupId>
			<artifactId>tagsoup</artifactId>
			<version>1.2.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- copy jars into lib -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- compile as JDK 1.6 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.0</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<!-- set java as runnable -->
			<!-- mvn install exec:java -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<configuration>
					<mainClass>igapyon.diary.ghpages.App</mainClass>
				</configuration>
			</plugin>

			<!-- run ant task -->
			<!-- usage: mvn antrun:run -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<configuration>
					<tasks>
						<property name="classpath" refid="maven.runtime.classpath" />
						<!-- <ant antfile="build.xml" target="md2html" inheritRefs="true" /> -->
						<ant antfile="build.xml" target="genkeywordmd" inheritRefs="true" />
					</tasks>
				</configuration>
				<goals>
					<goal>run</goal>
				</goals>
			</plugin>
		</plugins>
	</build>
</project>
