        $result-&gt;setAuthorNameKana($this-&gt;fCurrentRow[2]);
        $result-&gt;setDateOfBirth($this-&gt;fCurrentRow[3]);
        $result-&gt;setGenderCode($this-&gt;fCurrentRow[4]);

        return $result;
    }

