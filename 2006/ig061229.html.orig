        if (func_num_args() !== 0) {
            throw new Exception('[ArgumentException]: SimpleAuthorSelectIterator.next のパラメータは[0]個である必要があります。しかし実際には[' . func_num_args() .  ']個のパラメータを伴って呼び出されました。');
        }

        if ($this-&gt;fCurrentRow == NULL) {
