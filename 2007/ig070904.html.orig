            message.setFrom(addrFrom);

            final Address addrTo = new InternetAddress(&quot;ï¿½ï¿½Mï¿½Òï¿½ï¿½ï¿½ï¿½ï¿½@gmail.com&quot;,
                    &quot;ï¿½ï¿½Mï¿½Ò‚Ì•\ï¿½ï¿½ï¿½ï¿½&quot;, ENCODE);
