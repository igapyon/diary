        // ï¿½^ï¿½Cï¿½ï¿½ï¿½Aï¿½Eï¿½gï¿½İ’ï¿½
        props.setProperty(&quot;mail.smtp.connectiontimeout&quot;, &quot;60000&quot;);
        props.setProperty(&quot;mail.smtp.timeout&quot;, &quot;60000&quot;);

        // ï¿½Fï¿½ï¿½
